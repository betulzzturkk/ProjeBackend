@{
    ViewData["Title"] = "Giriş Ekranı";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        /* Genel sayfa stil ayarları */
        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            background-image: url('~/görseller/arkaplan.webp');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            color: purple;
        }

        /* Sağ üstteki menü stil ayarları */
        .navbar {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        /* Menü bağlantıları stil ayarları */
        .navbar a {
            text-decoration: none;
            color: white;
            font-weight: bold;
            font-size: 1.5em;
            background-color: #4CAF50;
            padding: 15px 30px;
            border-radius: 5px;
            text-align: center;
            transition: background-color 0.3s, transform 0.3s;
        }

        /* Menü bağlantılarına fareyle gelindiğinde stil ayarları */
        .navbar a:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }

        /* Giriş ekranı stil ayarları */
        .login-container {
            text-align: center;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        /* Giriş formu ve kart konteyner stil ayarları */
        .login-form, .card-container {
            margin: 20px;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 300px;
            color: black;
        }

        /* Başlık stil ayarları */
        h1 {
            font-size: 3em;
            margin-bottom: 20px;
            font-weight: bold;
            color: black;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        /* Giriş formu input alanları stil ayarları */
        input {
            padding: 10px;
            margin: 10px;
            width: 80%;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        /* Buton stil ayarları */
        button {
            padding: 10px 20px;
            margin: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Butona fareyle gelindiğinde stil ayarları */
        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

<!-- Sağ üstteki menü -->
<div class="navbar">
    <a href="@Url.Action("Egitimler", "Home")">Eğitimlere Göz At</a>
    <a href="@Url.Action("KullanimKilavuzu", "Home")">Kullanım Kılavuzu</a>
</div>

<!-- Giriş Ekranı -->
<div class="login-container" id="login-screen">
    <h1>Otizm Eğitim Platformu Giriş Ekranı</h1>
    <div class="login-form">
        <h2>Giriş Yap</h2>
        <form method="post" action="@Url.Action("Login", "Home")">
            <input type="text" id="username" name="username" placeholder="Kullanıcı Adı" required>
            <input type="password" id="password" name="password" placeholder="Şifre" required>
            <button type="submit">Giriş Yap</button>
        </form>
        <p>Yeni kullanıcı mı? <a href="@Url.Action("KayitOl", "Home")">Kaydol</a></p>
    </div>
</div>

<script src="script.js"></script>
</body>
</html>