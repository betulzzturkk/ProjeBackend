@{
    ViewData["Title"] = "Giriş Ekranı";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eğitimler</title>
    <style>
        .user-info {
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(255, 255, 255, 0.95);
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            z-index: 1000;
            text-align: left;
        }

        .user-info h3 {
            color: #030000;
            margin: 0 0 10px 0;
            font-size: 1.2em;
        }

        .user-info ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .user-info li {
            color: #333;
            margin-bottom: 5px;
        }

        /* Genel sayfa stil ayarları */
        body {
            font-family: Tahoma, Verdana, sans-serif;
            color: orange;
            font-size: 16px;
            background-color: #f3dbe9;
            text-align: center;
            padding: 20px;
            margin: 0;
        }

        h1 {
            text-align: center;
            font-family: 'Luckiest Guy', cursive;
            color: #000000;
            font-size: 3.5em;
            text-shadow: 3px 3px 0 #FFE66D,
                        -1px -1px 0 #FFE66D,
                        1px -1px 0 #FFE66D,
                        -1px 1px 0 #FFE66D,
                        1px 1px 0 #FFE66D;
            margin: 30px 0;
            letter-spacing: 2px;
            transform: rotate(-2deg);
            animation: bounce 1s infinite alternate;
        }

        .card-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .card-row {
            display: flex;
            justify-content: center;
            gap: 20px;
            width: 100%;
            margin-bottom: 20px;
        }

        .card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 300px;
            overflow: hidden;
            transition: transform 0.3s;
            cursor: pointer;
        }

        .card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card h3 {
            padding: 15px;
            text-align: center;
            font-size: 1.5em;
            color: #333;
        }

        .card p {
            padding: 0 15px 15px;
            font-size: 1.1em;
            text-align: justify;
            color: #555;
        }

        .card:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>

    <div class="user-info">
        <h3>Kullanıcı Profili</h3>
        <ul>
            <li>Ad: @Model.FirstName</li>
            <li>Soyad: @Model.LastName</li>
            <li>Tamamlanan Eğitim: @Model.CompletedCourses</li>
        </ul>
    </div>

    <h1>Eğitimler</h1>
    <div class="card-container">
        <!-- Kartlar burada devam edecek -->
    </div>

</body>
</html>